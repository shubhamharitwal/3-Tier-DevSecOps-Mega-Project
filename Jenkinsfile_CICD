pipeline {
    agent any

    tools {
        nodejs 'nodejs23'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }

    stages {

        stage('Git Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/shubhamharitwal/3-Tier-DevSecOps-Mega-Project.git'
            }
        }

        stage('Frontend Compilation') {
            steps {
                dir('client') {
                    sh 'find . -name "*.js" -exec node --check {} +'
                }
            }
        }

        stage('Backend Compilation') {
            steps {
                dir('api') {
                    sh 'find . -name "*.js" -exec node --check {} +'
                }
            }
        }

        stage('GitLeaks Scan') {
            steps {
                sh 'gitleaks detect --source ./client --exit-code 1'
                sh 'gitleaks detect --source ./api --exit-code 1'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=nodejs-project-jenkins \
                        -Dsonar.projectName=NodeJS-Project-Jenkins \
                        -Dsonar.sources=client,api
                    """
                }
            }
        }

        stage('Quality Gate Check') {
            steps {
                timeout(time: 10, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Trivy FS Scan') {
            steps {
                sh '/usr/bin/trivy fs --severity HIGH,CRITICAL --format table -o trivy-fs-report.txt .'
            }
        }

        stage('Build & Push Frontend Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: '94545777-a627-498d-9a07-865753dab5b4') {
                        dir('client') {
                            sh 'docker build -t shubhamsharma77/frontend:latest .'
                            sh 'trivy image --format table -o frontend-image-report.html shubhamsharma77/frontend:latest'
                            sh 'docker push shubhamsharma77/frontend:latest'
                        }
                    }
                }
            }
        }

        stage('Build & Push Backend Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: '94545777-a627-498d-9a07-865753dab5b4') {
                        dir('api') {
                            sh 'docker build -t shubhamsharma77/backend:latest .'
                            sh 'trivy image --format table -o backend-image-report.html shubhamsharma77/backend:latest'
                            sh 'docker push shubhamsharma77/backend:latest'
                        }
                    }
                }
            }
        }

        stage('Docker Build via Compose') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline completed successfully!'
        }
        failure {
            echo '❌ Pipeline failed. Check logs.'
        }
        always {
            archiveArtifacts artifacts: '*.txt, *.html', fingerprint: true
        }
    }
}

